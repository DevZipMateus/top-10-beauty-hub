<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # React Router / SPA fallback: send all non-file/non-directory requests to /index.html
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
